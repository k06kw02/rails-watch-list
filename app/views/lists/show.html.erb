<<div class="container">
 <div class="row">
    <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="row">
        <div class="card-deck">
          <div class="card" style="width: 18rem;">
            <%= image_tag movie.poster_url, alt: movie.title %>
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %>  score: <%= movie.rating %></h5>
                <p class="card-text"><strong>Synopsis: </strong><%= movie.overview %></p>
                <p class="card-text"><strong>My thoughts: </strong><%= bookmark.comment %> </p>
              </div>
              <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' ,class: "card-link"  %>
          </div>
        </div>
      </div>
      <% end %>
</div>






  <div class = "row">
    <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat' %>
    <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
    <%= link_to 'back to list page', root_path, class: 'btn btn-flat' %>
  </div>
</div>
